<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/commonTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_utility_view"
        android:background="@android:color/white"
        app:tl_iconHeight="30dp"
        app:tl_iconWidth="30dp"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="@color/theme_color"
        app:tl_textUnselectColor="@color/base_lib_gray"
        app:tl_textsize="@dimen/font_content_small"
        app:tl_underline_height="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_lib_gray_line" />

    <cn.sts.base.view.widget.ScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
