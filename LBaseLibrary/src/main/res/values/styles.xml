<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item><!--标题栏颜色-->
        <item name="colorPrimaryDark">@color/theme_color</item><!--状态栏颜色-->
        <item name="colorAccent">@color/theme_color</item><!--图标颜色，例如RadioButton-->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="toolbarStyle">@style/ToolbarLeftInset</item>
    </style>

    <!--去除toolbar左边距-->
    <style name="ToolbarLeftInset" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <!-- popup window animation style -->
    <style name="popup_window_animation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_to_top</item>
        <item name="android:windowExitAnimation">@anim/push_to_bottom</item>
    </style>

    <!--AppDialog-->
    <style name="dialog_app" parent="android:style/Theme.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
    </style>

    <!--AppDialog-->
    <style name="dialog_progress" parent="android:style/Theme.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
    </style>


    <!--基本多功能UtilityView-->
    <style name="utility_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_utility_view</item>
        <item name="android:background">@android:color/white</item>
        <item name="text_content_size">@dimen/font_content_middle</item>
        <item name="text_title_size">@dimen/font_content_middle</item>
        <item name="text_title_color">@color/black</item>
        <item name="title_padding_right">@dimen/space</item>
        <item name="title_padding_left">@dimen/space</item>
        <item name="line_color_checked">@color/black</item>
        <item name="line_color">@color/base_lib_gray_line</item>
    </style>

    <!--工具栏图片-->
    <style name="base_lib_toolbar_image">
        <item name="android:layout_width">@dimen/height_title</item>
        <item name="android:layout_height">@dimen/height_title</item>
        <item name="android:paddingLeft">@dimen/space_small</item>
        <item name="android:paddingRight">@dimen/space_small</item>
        <item name="android:paddingTop">@dimen/space_small</item>
        <item name="android:paddingBottom">@dimen/space_small</item>
    </style>

</resources>
