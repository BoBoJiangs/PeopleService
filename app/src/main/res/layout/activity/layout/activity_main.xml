<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.main.MainActivity">

    <include
        layout="@layout/toolbar" />



    <cn.sts.base.view.widget.ScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
<!--    <FrameLayout-->
<!--        android:id="@+id/frameLayout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"/>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_lib_gray_line" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/commonTabLayout"
        android:layout_width="match_parent"
        android:layout_height="98pt"
        android:background="@android:color/white"
        app:tl_iconHeight="40pt"
        app:tl_iconWidth="40pt"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="@color/base_text_color"
        app:tl_textUnselectColor="@color/base_lib_gray"
        app:tl_textsize="@dimen/font_content_small"
        app:tl_underline_height="0dp" />
</LinearLayout>