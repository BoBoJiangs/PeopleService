<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <include layout="@layout/toolbar" />

    <TextView style="@style/horizontal_line_style" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <cn.sts.base.view.widget.UtilityView
                android:id="@+id/headUV"
                style="@style/utility_view"
                android:layout_height="220pt"
                app:right_image_height="180pt"
                app:right_image_res="@mipmap/icon_yuan"
                app:right_image_width="180pt"
                app:text_content=""
                app:text_content_color="@color/base_lib_gray"
                app:text_content_size="@dimen/font_btn_small_best"
                app:text_title="店铺头像" />

            <cn.sts.base.view.widget.UtilityView
                android:id="@+id/shopNameUV"
                style="@style/info_utility_input"
                app:text_content_hint="店铺名称"
                app:text_title="店铺名称" />

            <cn.sts.base.view.widget.UtilityView
                android:id="@+id/phoneUV"
                style="@style/info_utility_input"
                app:text_content_hint="店铺电话"
                app:text_content_input_type="NUMBER"
                app:text_title="店铺电话" />

            <cn.sts.base.view.widget.UtilityView
                android:id="@+id/addressUV"
                style="@style/info_utility"
                app:line_show="true"
                app:text_content_hint="请选择"
                app:text_title="店铺地址" />

            <cn.sts.base.view.widget.UtilityView
                android:id="@+id/cityUV"
                style="@style/info_utility"
                app:text_content_hint="请选择"
                app:text_title="所属省市" />

            <cn.sts.base.view.widget.UtilityView
                android:id="@+id/bankNumberUV"
                style="@style/info_utility_input"
                app:line_show="true"
                app:text_content_hint="银行卡号"
                app:text_title="银行卡号" />


            <cn.sts.base.view.widget.UtilityView
                android:id="@+id/bankNameUV"
                style="@style/info_utility_input"
                app:line_show="true"
                app:text_content_hint="开户行"
                app:text_title="开户行" />



            <cn.sts.base.view.widget.UtilityView
                android:id="@+id/remakeUV"
                style="@style/utility_view"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                app:line_show="true"
                app:multi_line="true"
                app:text_content_hint="请输入店铺描述"
                app:text_title="店铺描述　"
                app:type="INPUT" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_default"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/shopBgLL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shopBgIV"
                        android:layout_width="match_parent"
                        android:layout_height="200pt"
                        android:scaleType="centerCrop"
                        android:background="@drawable/icon_camera" />

                    <TextView
                        android:id="@+id/shopBgTV"
                        style="@style/text_view_content_black"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="店铺背景图" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/licenseFL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/licenseIV"
                        android:layout_width="match_parent"
                        android:layout_height="200pt"
                        android:scaleType="centerCrop"
                        android:background="@drawable/icon_camera" />

                    <TextView
                        android:id="@+id/licenseTV"
                        style="@style/text_view_content_black"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="营业执照" />
                </LinearLayout>
            </LinearLayout>

            <cn.sts.base.view.widget.UtilityView
                android:id="@+id/nameUV"
                style="@style/info_utility_input"
                android:layout_marginTop="20dp"
                app:text_content_hint="管理员姓名"
                app:text_title="管理员姓名" />

            <cn.sts.base.view.widget.UtilityView
                android:id="@+id/idCardUV"
                style="@style/info_utility_input"
                app:text_content_hint="请输入身份证号"
                app:text_title="管理员身份证号" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_default"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cardFaceFL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cardFaceIV"
                        android:layout_width="match_parent"
                        android:layout_height="200pt"
                        android:scaleType="centerCrop"
                        android:background="@drawable/icon_camera" />

                    <TextView
                        android:id="@+id/addFaceTV"
                        style="@style/text_view_content_black"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="身份证正面" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardBackFL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cardBackIV"
                        android:layout_width="match_parent"
                        android:layout_height="200pt"
                        android:scaleType="centerCrop"
                        android:background="@drawable/icon_camera" />

                    <TextView
                        android:id="@+id/addBackTV"
                        style="@style/text_view_content_black"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="身份证反面" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/sureBtn"
        style="@style/login_btn_style"
        android:layout_width="90dp"
        android:layout_height="70pt"
        android:layout_gravity="right"
        android:text="提交" />
</LinearLayout>
