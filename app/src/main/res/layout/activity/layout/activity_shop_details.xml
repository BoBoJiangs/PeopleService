<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fa"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <TextView style="@style/horizontal_line_style" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200pt"
        android:background="#707070"/>
    <TextView
        android:id="@+id/companyNameTV"
        android:layout_width="match_parent"
        style="@style/text_view_content_black"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:minHeight="78pt"
        android:text="北京豆当科技有限公司"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/phoneTV"
            style="@style/text_view_content_black"
            android:text="加载中"/>
        <TextView
            android:id="@+id/addressTV"
            style="@style/text_view_content_black"
            android:text="加载中"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            style="@style/text_view_content_black"
            android:text="商家简介"/>
        <TextView
            android:id="@+id/remakeTV"
            style="@style/text_view_content_black"
            android:text="加载中"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/stateLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sureTV"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:background="@color/white"
            android:textColor="@color/base_text_color"
            android:minHeight="80pt"
            android:gravity="center"
            android:text="审核中" />
        <Button
            android:id="@+id/sureBtn"
            style="@style/login_btn_style"
            android:layout_margin="0dp"
            android:text="申请入驻"/>
    </LinearLayout>

</LinearLayout>
