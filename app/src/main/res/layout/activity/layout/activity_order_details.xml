<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <include layout="@layout/toolbar" />

    <View style="@style/horizontal_line_style" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_f2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/space_default"
                android:paddingEnd="@dimen/space_default"
                android:paddingTop="90pt"
                android:paddingBottom="90pt"
                app:bl_gradient_angle="135"
                app:bl_gradient_endColor="#FF5F00"
                app:bl_gradient_startColor="#FF7E43">

                <TextView
                    android:id="@+id/orderStateTV"
                    style="@style/text_view_content"
                    android:text="加载中"
                    android:textSize="@dimen/font_btn_small" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space_default">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/nameTV"
                    style="@style/text_view_14_black"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="加载中"
                    android:textSize="@dimen/font_btn_small" />

                <TextView
                    android:id="@+id/addressTV"
                    style="@style/text_view_14_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="加载中" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <include layout="@layout/item_order_layout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_default"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    app:bl_corners_radius="@dimen/dp_10"
                    app:bl_solid_color="@color/white">

                    <cn.sts.base.view.widget.UtilityView
                        android:id="@+id/priceUV"
                        style="@style/order_utility"
                        app:content_gravity="end"
                        app:text_content="¥ 0.00"
                        app:text_content_color="@color/base_text_color"
                        app:text_title="总价" />


                    <cn.sts.base.view.widget.UtilityView
                        android:id="@+id/payUV"
                        style="@style/order_utility"
                        app:content_gravity="end"
                        app:line_show="false"
                        app:text_content="¥ 0.00"
                        app:text_content_color="@color/base_text_color"
                        app:text_title="实付款" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45pt"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="6pt"
                        android:layout_height="25pt"
                        android:layout_marginStart="@dimen/space_default"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@color/base_text_color" />

                    <TextView
                        android:id="@+id/titleTV"
                        style="@style/text_view_content_black"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="订单信息"
                        android:textSize="@dimen/font_content_middle"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_default"
                    android:layout_marginEnd="@dimen/space_default"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    app:bl_corners_radius="@dimen/dp_10"
                    app:bl_solid_color="@color/white">

                    <cn.sts.base.view.widget.UtilityView
                        android:id="@+id/orderNumUV"
                        style="@style/order_utility"
                        android:layout_height="50pt"
                        app:line_show="false"
                        app:text_title="订单编号：" />

                    <cn.sts.base.view.widget.UtilityView
                        android:id="@+id/orderTimeUV"
                        style="@style/order_utility"
                        app:text_title="下单时间：" />

                    <cn.sts.base.view.widget.UtilityView
                        android:id="@+id/payTypeUV"
                        style="@style/order_utility"
                        app:line_show="false"
                        app:text_title="支付方式：" />

                    <cn.sts.base.view.widget.UtilityView
                        android:id="@+id/payTimeUV"
                        style="@style/order_utility"
                        android:layout_height="50pt"
                        app:line_show="false"
                        app:text_title="支付时间：" />
                </LinearLayout>

                <TextView
                    style="@style/horizontal_line_style"
                    android:layout_height="@dimen/space_default" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>