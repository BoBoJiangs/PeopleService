<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/line_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    app:bl_corners_radius="5dp"
    app:bl_solid_color="@color/white"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/contentLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/headImg"
            android:layout_width="200pt"
            android:layout_height="200pt"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/default_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameTV"
                        style="@style/text_view_content_black"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="加载中" />

                    <TextView
                        android:id="@+id/careersTV"
                        style="@style/text_view_content_gray"
                        android:layout_width="0dp"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="1"
                        android:text="加载中"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/shopNameTV"
                        style="@style/text_view_content_gray"
                        android:layout_marginStart="@dimen/dp_10"
                        android:drawableStart="@mipmap/icon_shop"
                        android:drawablePadding="5dp"
                        android:text="加载中"
                        android:textSize="13sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10">

                    <com.cb.ratingbar.CBRatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starCount="5"
                        app:starCoverColor="@color/base_text_color"
                        app:starFillColor="@color/white"
                        app:starPathData="@string/default_start"
                        app:starPathDataId="@string/default_start"
                        app:starShowStroke="true"
                        app:starSize="20dp"
                        app:starSpace="4dp"
                        app:starStrokeColor="@color/base_text_color"
                        app:starStrokeWidth="2dp" />

                    <TextView
                        android:id="@+id/praiseRateTV"
                        style="@style/text_view_content_gray"
                        android:layout_gravity="right"
                        android:text="加载中" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/contentTV"
            style="@style/text_view_content_black"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="20pt"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="加载中" />
    </LinearLayout>

</LinearLayout>
