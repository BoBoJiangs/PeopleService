<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_title"
    android:background="@color/theme_color">

    <ImageView
        android:id="@+id/leftIV"
        style="@style/toolbar_image"
        android:src="@drawable/base_icon_back" />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_title_middle" />

    <LinearLayout
        android:id="@+id/rightLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/dp_10"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rightIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:src="@mipmap/icon_car"
                android:visibility="visible" />

            <com.flyco.tablayout.widget.MsgView
                android:id="@+id/msgMV"
                android:text="1"
                app:mv_backgroundColor="@color/white"
                app:mv_isRadiusHalfHeight="true"
                app:mv_strokeColor="@color/base_text_color"
                app:mv_strokeWidth="1dp"
                style="@style/msg_tip_style" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp">

            <ImageView
                android:id="@+id/rightIV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:src="@mipmap/icon_msg2"
                android:visibility="visible" />

            <com.flyco.tablayout.widget.MsgView
                android:id="@+id/msgMV2"
                android:text="1"
                app:mv_backgroundColor="@color/white"
                app:mv_isRadiusHalfHeight="true"
                app:mv_strokeColor="@color/base_text_color"
                app:mv_strokeWidth="1dp"
                android:visibility="invisible"
                style="@style/msg_tip_style" />
        </FrameLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/rightTV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_title"
        android:layout_gravity="right"
        android:gravity="center"
        android:padding="@dimen/space_small"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_title_small" />

</androidx.appcompat.widget.Toolbar>
