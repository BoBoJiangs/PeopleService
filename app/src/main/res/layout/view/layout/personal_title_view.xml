<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:bl_gradient_angle="0"
        app:bl_gradient_endColor="#FF7E43"
        app:bl_gradient_startColor="#FF5F00">


        <RelativeLayout
            android:id="@+id/userInfoRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_default">

            <ImageView
                android:id="@+id/photoIV"
                android:layout_width="@dimen/height_image_big"
                android:layout_height="@dimen/height_image_big"
                android:layout_centerVertical="true"
                android:src="@drawable/base_icon_default" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/arrowTV"
                android:layout_toRightOf="@+id/photoIV"
                android:layout_marginStart="@dimen/space_small"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTV"
                    style="@style/text_view_content"
                    android:lines="1"
                    android:text="张三"
                    android:textSize="@dimen/font_content_four" />

                <TextView
                    android:id="@+id/memberTV"
                    style="@style/text_view_content"
                    android:layout_height="30pt"
                    android:layout_marginTop="5dp"
                    android:text="普通会员"
                    android:textSize="10sp"
                    app:bl_corners_radius="7dp"
                    app:bl_solid_color="#FFB284" />
            </LinearLayout>


            <ImageView
                android:id="@+id/arrowTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_down" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110pt"
            android:layout_margin="@dimen/space_default"
            android:orientation="horizontal"
            app:bl_corners_radius="5dp"
            app:bl_solid_color="@color/white">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/text_view_content_gray"
                    android:text="999" />

                <TextView
                    style="@style/text_view_content_gray"
                    android:text="购物车"
                    android:textSize="@dimen/font_content_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/text_view_content_gray"
                    android:text="999" />

                <TextView
                    style="@style/text_view_content_gray"
                    android:text="关注服务"
                    android:textSize="@dimen/font_content_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/text_view_content_gray"
                    android:text="999" />

                <TextView
                    style="@style/text_view_content_gray"
                    android:text="关注技师"
                    android:textSize="@dimen/font_content_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/text_view_content_gray"
                    android:text="999" />

                <TextView
                    style="@style/text_view_content_gray"
                    android:text="关注店铺"
                    android:textSize="@dimen/font_content_small" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>