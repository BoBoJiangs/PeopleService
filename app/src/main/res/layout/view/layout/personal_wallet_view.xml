<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:bl_solid_color="@color/white"
    app:bl_corners_radius="5dp"
    android:layout_margin="@dimen/space_default"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80pt"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/space_default"
        android:paddingEnd="@dimen/space_default"
        android:orientation="horizontal">
        <TextView
            style="@style/text_view_content_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="我的钱包"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130pt"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/balanceLL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                style="@style/text_view_content_black"
                android:textStyle="bold"
                android:text="999"/>
            <TextView
                style="@style/text_view_content_gray"
                android:textSize="@dimen/font_content_small"
                android:text="余额"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/couponLL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                style="@style/text_view_content_black"
                android:textStyle="bold"
                android:text="999"/>
            <TextView
                style="@style/text_view_content_gray"
                android:textSize="@dimen/font_content_small"
                android:text="代金券"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/incomeTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                style="@style/text_view_content_black"
                android:textStyle="bold"
                android:text="999"/>
            <TextView
                style="@style/text_view_content_gray"
                android:textSize="@dimen/font_content_small"
                android:text="收入"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>