<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160pt"
        android:layout_height="160pt"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/space_default"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/space_default"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                style="@style/text_view_14_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:text="加载中" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/text_view_14_black"
                    android:layout_height="wrap_content"
                    app:bl_solid_color="@color/base_text_color"
                    android:layout_width="50dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="最快上门"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="10sp"
                    app:bl_corners_topLeftRadius="4dp"
                    app:bl_corners_topRightRadius="4dp" />

                <TextView
                    style="@style/text_view_14_black"
                    android:layout_height="wrap_content"
                    android:layout_width="50dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:gravity="center"
                    android:text="明日16点"
                    android:textColor="@color/base_text_color"
                    android:textSize="10sp"
                    app:bl_corners_bottomLeftRadius="4dp"
                    app:bl_corners_bottomRightRadius="4dp"
                    app:bl_solid_color="@color/white"
                    app:bl_stroke_color="@color/base_text_color"
                    app:bl_stroke_width="1dp" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            style="@style/text_view_content_gray"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="服务内容"
            android:textSize="@dimen/font_btn_small_best" />

        <TextView
            style="@style/text_view_content_gray"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="34 元/小时"
            android:textSize="@dimen/font_btn_small_best" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_view_content_gray"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="天恒家政"
                android:textSize="@dimen/font_content_small" />

            <TextView
                style="@style/text_view_content_gray"
                android:text="已售 8069"
                android:textSize="@dimen/font_content_small" />

            <TextView
                style="@style/text_view_content_gray"
                android:layout_marginStart="@dimen/dp_10"
                android:text="好评 99%"
                android:textSize="@dimen/font_content_small" />
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/horizontal_line_style"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
