<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_default"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160pt"
        android:layout_height="160pt"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/titleTV"
        style="@style/text_view_content_black"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:text="推荐科目"
        android:textSize="@dimen/font_btn_small_best" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/priceTV1"
            style="@style/text_view_content_black"
            android:layout_width="wrap_content"
            android:lines="1"
            android:text="¥200"
            android:textColor="@color/base_text_color"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceTV2"
            style="@style/text_view_content_black"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/gray_cc"
            android:lines="1"
            android:text="原件：¥200"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
