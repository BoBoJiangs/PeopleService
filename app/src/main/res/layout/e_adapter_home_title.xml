<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingTop="@dimen/space_middle"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:layout_width="6pt"
        android:layout_height="30pt"
        android:layout_marginStart="@dimen/space_default"
        android:layout_marginEnd="@dimen/space_default"
        android:background="@color/base_text_color"/>
    <TextView
        android:id="@+id/titleTV"
        style="@style/text_view_content_black"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/font_content_middle"
        android:textStyle="bold"
        android:text="考试练习"/>
    <TextView
        android:id="@+id/moreTV"
        style="@style/text_view_content_black"
        android:textSize="@dimen/font_content_small"
        android:textColor="@color/base_text_color"
        android:text="更多>>"/>
</LinearLayout>
