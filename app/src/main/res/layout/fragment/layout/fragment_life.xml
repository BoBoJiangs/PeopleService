<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:layout_marginStart="@dimen/space_default"
        android:layout_marginEnd="@dimen/space_default"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/text_view_content_gray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="暂无位置信息"
            android:textSize="@dimen/font_btn_small_best" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_default"
            android:src="@mipmap/icon_msg2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_default"
        android:paddingEnd="@dimen/space_default">

        <include
            layout="@layout/search_view"
            android:layout_width="0dp"
            android:layout_height="60pt"
            android:layout_weight="1" />

        <TextView
            style="@style/text_view_content_gray"
            android:layout_marginStart="@dimen/space_default"
            android:text="分类"
            android:textSize="@dimen/font_content_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/arrow_down" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                style="@style/text_view_content_gray"
                android:textSize="@dimen/font_btn_small_best"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="个人"/>
            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/base_text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                style="@style/text_view_content_gray"
                android:textSize="@dimen/font_btn_small_best"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="商家"/>
            <TextView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/base_text_color"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>


    <com.amap.api.maps.TextureMapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>