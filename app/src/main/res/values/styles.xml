<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="toolbarStyle">@style/ToolbarLeftInset</item>
    </style>

    <style name="horizontal_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/base_lib_gray_line</item>
    </style>

    <style name="vertical_line_style">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/base_lib_gray_line</item>
    </style>

    <!--内容的TextView，灰色-->
    <style name="text_view_content_gray" parent="text_view_content">
        <item name="android:textColor">@color/base_lib_gray</item>
        <item name="android:textSize">@dimen/font_content_five</item>
    </style>

    <!--内容的TextView，黑色-->
    <style name="text_view_content_black" parent="text_view_content">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--内容的TextView，黑色-->
    <style name="text_view_14_black" parent="text_view_content">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_content_five</item>
    </style>


    <!--内容的TextView-->
    <style name="text_view_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_content_three</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--登录界面的输入框样式-->
    <style name="login_utility" parent="utility_view">
        <item name="android:layout_height">48dp</item>
        <item name="type">INPUT</item>
        <item name="line_show">true</item>
        <item name="right_image_height">32pt</item>
        <item name="right_image_width">32pt</item>
        <item name="right_image_res">@mipmap/icon_clear</item>
        <item name="right_image_show_by_input">true</item>
        <item name="title_padding_left">0dp</item>
        <item name="text_content_input_type">NUMBER_DECIMAL</item>
    </style>

    <!--搜索背景-->
    <style name="search_bg_style">
        <item name="bl_corners_radius">13dp</item>
        <item name="bl_solid_color">@color/gray_f6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_title</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="personal_text_style" parent="text_view_content_black">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableTop">@mipmap/tab_home_select</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_content_small</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50pt</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textColor">@color/gray_66</item>
        <item name="android:textSize">@dimen/font_btn_small_best</item>
    </style>

    <style name="msg_tip_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
