<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="toolbarStyle">@style/ToolbarLeftInset</item>
    </style>

    <!--内容的TextView，灰色-->
    <style name="text_view_content_gray" parent="text_view_content">
        <item name="android:textColor">@color/base_lib_gray</item>
    </style>

    <!--内容的TextView，黑色-->
    <style name="text_view_content_black" parent="text_view_content">
        <item name="android:textColor">@color/black</item>
    </style>


    <!--内容的TextView-->
    <style name="text_view_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_content_three</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
